<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#E1D9D9"
        android:padding="16dp">

        <!-- Bouton Menu -->
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#02C37e"
            android:text="Menu"
            android:textColor="#FFFFFF" />

        <!-- Titre -->
        <TextView
            android:id="@+id/nom_utilisateur_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="NOM PRENOM CANDIDAT"
            android:textColor="#2C2B2B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Localisation -->

        <TextView
            android:id="@+id/localisation_offre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_utilisateur_editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:text="Ville , rÃ©gion"
            android:inputType="textCapCharacters"
            android:minHeight="55dp"
            android:textColor="#635B5B"
            android:textSize="22dp"
            android:textStyle="italic" />


    </RelativeLayout>



    <!-- Contenu du ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:id="@+id/detail_candidat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="80dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/apropos_titre"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="45dp"
                android:padding="13dp"
                android:text="A propos "
                android:textColor="#02C37e"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/apropos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="45dp"
                android:padding="13dp"
                android:text="Description  du candidat"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/candidatures_titre"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="45dp"
                android:padding="13dp"
                android:text="Candidatures en attente "
                android:textColor="#02C37e"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/candidatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="45dp"
                android:padding="13dp"
                android:text="liste candidatures "
                android:textSize="22dp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>




